# auth
# 스포티파이 개발자 대시보드 Client ID
SPOTIFY_CLIENT_ID=your_spotify_client_id
# 스포티파이 인증 후 돌아올 주소 (프론트엔드)
SPOTIFY_REDIRECT_URI=http://localhost:3000/auth/spotify/callback

# spotify api url
# 스포티파이 Web API 기본 주소 (고정값)
NEXT_PUBLIC_SPOTIFY_API_BASE_URL=https://api.spotify.com/v1

# SSR -> backend api 요청시 사용 (Server Side)
# Next.js 서버(Node)에서 백엔드로 직접 요청할 때 주소 (Docker 사용 시 컨테이너명 사용 가능하지만, 로컬 실행 시 localhost)
INTERNAL_API_URL=http://localhost:3002

# CSR -> backend api 요청시 사용 (Client Side)
# 브라우저에서 백엔드로 요청할 때 주소
API_BASE_URL=http://localhost:3002
# 프론트엔드 앱의 도메인 주소
NEXT_PUBLIC_APP_ORIGIN=http://localhost:3000

# google oauth
# 구글 클라우드 콘솔 Client ID
GOOGLE_CLIENT_ID=your_google_client_id
# 구글 로그인 후 돌아올 주소
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# youtube 검색
# 구글 클라우드 콘솔에서 발급받은 Youtube Data API Key
YOUTUBE_SEARCH_API_KEY=your_youtube_api_key

# db 동기화 
NODE_ENV=development

# default img
# 프로필 이미지 등이 없을 때 보여줄 기본 이미지 경로 (public 폴더 기준)
NEXT_PUBLIC_DEFAULT_IMG=/images/default_profile.png