# auth - JWT
# JWT 서명에 사용할 비밀키 (임의의 긴 문자열)
JWT_SECRET=your_super_secret_jwt_key_here

# auth - spotify
# 스포티파이 토큰 발급 URL (고정값)
SPOTIFY_TOKEN_URL=https://accounts.spotify.com/api/token
# 스포티파이 개발자 대시보드에서 발급받은 Client ID
SPOTIFY_CLIENT_ID=your_spotify_client_id
# 스포티파이 로그인 후 리다이렉트될 URI (프론트엔드 주소)
SPOTIFY_REDIRECT_URI=http://localhost:3000/auth/spotify/callback

# api - spotify
# 스포티파이 API 기본 주소 (고정값)
SPOTIFY_API_BASE_URL=https://api.spotify.com/v1

# db - dev
# 로컬 개발 환경용 MySQL 설정
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=1234
DB_DATABASE=vibr

# Neo4j 
# 로컬 개발 환경용 Neo4j 설정
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=12345678

# redis
# 로컬 개발 환경용 Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=1234

# Google OAuth 2.0
# 구글 클라우드 콘솔에서 발급받은 Client ID
GOOGLE_CLIENT_ID=your_google_client_id
# 구글 클라우드 콘솔에서 발급받은 Client Secret
GOOGLE_CLIENT_SECRET=your_google_client_secret
# 구글 로그인 후 리다이렉트될 URI (프론트엔드 주소)
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Server Configuration
PORT=3002
NODE_ENV=development

# NCP object storage (Naver Cloud Platform)
# 네이버 클라우드 Access Key
NCP_ACCESS_KEY=your_ncp_access_key
# 네이버 클라우드 Secret Key
NCP_SECRET_KEY=your_ncp_secret_key
# 사용할 버킷 이름
NCP_BUCKET_NAME=your_bucket_name